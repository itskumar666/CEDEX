{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./", // or wherever your files are located
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*", "routes/**/*","controller/**/*","middleware/**/*","prisma/**/*"], // Include other directories if necessary
  "exclude": ["node_modules", "**/*.spec.ts"]
}
